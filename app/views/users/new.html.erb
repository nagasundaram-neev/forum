  </div>
  <div class="field">
    <%= f.text_field :email, :placeholder => "Email" %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>

<% end %>
  </div>
  </div>
  </div>
  <% if signed_in? %>
  <% if  is_admin?(current_user.username) %>
<%= link_to image_tag("back.png", :border=>0, :class => 'dock-item'), users_path, class: "pull-left"  %>
