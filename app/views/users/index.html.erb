<% if  is_admin?(current_user.username) %>
<%= link_to 'New user', new_user_path, class: "btn btn-primary pull-right"  %>
<%end%>
<h1>All users</h1>
<p id="notice"><%= notice %></p><%= link_to 'Logout', root_path, class:"btn btn-danger pull-right"%>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user, class: "btn btn-info" %></td>
       <% if  is_admin?(current_user.username) %>
        <td><%= link_to 'Remove', user, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-danger" %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h1>Recent users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <% unless @recent.blank? %>
      <th>Name</th>
      <th>Email</th>
      <% end %>
      </tr>
  </thead>

  <tbody>
    <% @recent.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user, class: "btn btn-info" %></td>
        <% if  is_admin?(current_user.username) %>
        <td><%= link_to 'Remove', user, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-danger" %></td>
      <%end%>
      </tr>
    <% end %>
  </tbody>
</table>





